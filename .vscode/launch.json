{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug main.ts",
            "runtimeArgs": ["--env-file=.env", "--nolazy", "-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/main.ts", "--transpile-only"],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug current ts file",
            "runtimeArgs": ["--env-file=.env", "--nolazy", "-r", "ts-node/register"],
            "args": ["${file}", "--transpile-only"],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "sourceMaps": true
        }
    ]
}
